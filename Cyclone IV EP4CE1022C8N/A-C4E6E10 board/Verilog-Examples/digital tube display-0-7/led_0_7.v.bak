//７段数码管测试实验：以动态扫描方式在８位数码管
//“同时”显示０--7
//实验的目的是向用户介绍多个数码管动态显示的方法。
//动态显示的方法是，按一定的频率轮流向各个数码管的COM端送出低电平
//同时送出对应的数据给各段


module led_0_7 (clk,rst,dataout,en);

input clk,rst;         //系统时钟50M输入 从17脚输入。
output[7:0] dataout;   //数码管的段码输出
output[7:0] en;        //数码管的位选使能输出

reg[7:0] dataout;     
reg[7:0] en;

reg[15:0] cnt_scan;   //数码管的扫描显示计数器
reg[4:0] dataout_buf;

always@(posedge clk or negedge  rst)
begin
	if(!rst) begin
		cnt_scan<=0;
		
	 end
	else begin
		cnt_scan<=cnt_scan+1;
                  //数码管的扫描显示计数器自加
		end
end

always @(cnt_scan)
begin
   case(cnt_scan[15:13])
                //case语句的功能是把每一个数码管轮流点亮。
                //修改cnt_scan[15:13]，可以修改数码管的显示频率。
       3'b000 :
          en = 8'b1111_1110;  //点亮第一位数码管

       3'b001 :
          en = 8'b1111_1101;

       3'b010 :
          en = 8'b1111_1011;

       3'b011 :
          en = 8'b1111_0111;

       3'b100 :
          en = 8'b1110_1111;

       3'b101 :
          en = 8'b1101_1111;

       3'b110 :
          en = 8'b1011_1111;

       3'b111 :
          en = 8'b0111_1111;

       default :
          en = 8'b1111_1110;  //点亮第八位数码管
    endcase
end
always@(en) //对应COM信号给出各段数据
begin
	case(en)
		8'b1111_1110:          //根据不同的使能信号。
			dataout_buf=0; //数码管显示不同的数字
		8'b1111_1101:
			dataout_buf=1;
		8'b1111_1011:
			dataout_buf=2;
		8'b1111_0111:
			dataout_buf=3;	
		8'b1110_1111:
			dataout_buf=4;
		8'b1101_1111:
			dataout_buf=5;
		8'b1011_1111:
			dataout_buf=6;
		8'b0111_1111:
			dataout_buf=7;
		default: 
			dataout_buf=8;
	 endcase
end

always@(dataout_buf)
begin

	case(dataout_buf)
		4'b0000:
			dataout=8'b1100_0000; //共阳数码管显示0的段码
		4'b0001:
			dataout=8'b1111_1001;
		4'b0010:
			dataout=8'b1010_0100;
		4'b0011:
			dataout=8'b1011_0000;
		4'b0100:
			dataout=8'b1001_1001;
		4'b0101:
			dataout=8'b1001_0010;
		4'b0110:
			dataout=8'b1000_0010;
		4'b0111:
			dataout=8'b1111_1000; //共阳数码管显示7的段码
		default: 
			dataout=8'b1000_0000;
	 endcase
end

endmodule 